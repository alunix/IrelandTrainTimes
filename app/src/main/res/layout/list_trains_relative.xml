<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/traindue_RL"
    android:background="@drawable/stationsearchitem_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Dublin Connolly"
        android:id="@+id/trainsdue_dest_TV"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="38 mins"
        android:id="@+id/trainsdue_mins_TV"
        android:layout_alignBottom="@+id/reminderButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22:14"
        android:layout_marginRight="10dp"
        android:id="@+id/trainsdue_time_TV"
        android:layout_toLeftOf="@+id/trainsdue_delay_TV"
        android:layout_alignBottom="@+id/reminderButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+6)"
        android:layout_marginRight="20dp"
        android:id="@+id/trainsdue_delay_TV"
        android:layout_toLeftOf="@+id/reminderButton"
        android:layout_alignBottom="@+id/reminderButton"
        />

    <ImageView
        android:layout_width="5dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@+id/reminderButton"
        android:layout_marginRight="10dp"
        android:background="@color/twitterblue" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/reminderButton"
        android:background="@color/twitterblue"
        android:layout_alignParentRight="true"/>
</RelativeLayout>